{
  "name": "Teacher",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "activationToken": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "subjects": {
      "type": "hasAndBelongsToMany",
      "model": "Subject",
      "foreignKey": "teacherId",
      "options": {
        "nestRemoting": true
      },
      "throughTable": "TeacherSubject"
    },
    "schoolUser": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "schoolUserId",
      "options": {
        "nestRemoting": true
      }
    },
    "groups": {
      "type": "hasAndBelongsToMany",
      "model": "Group",
      "foreignKey": "teacherId",
      "options": {
        "nestRemoting": true
      },
      "throughTable": "TeacherGroup"
    },
    "grades": {
      "type": "hasAndBelongsToMany",
      "model": "Grade",
      "foreignKey": "teacherId",
      "options": {
        "nestRemoting": true
      },
      "throughTable": "TeacherGrade"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "School",
      "permission": "ALLOW",
      "property": [
        "AddTeachers",
        "GetAllOfSchool"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "Activate"
      ]
    }
  ],
  "methods": {
    "AddTeachers": {
      "accepts": [
        {
          "arg": "teachers",
          "type": "array",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newTeachers",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/Array",
          "verb": "post"
        }
      ]
    },
    "GetAllOfSchool": {
      "accepts": [
        {
          "arg": "schoolUserId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "teachers",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/OfSchool/:schoolUserId",
          "verb": "get"
        }
      ]
    },
    "prototype.Activate": {
      "accepts": [],
      "returns": [
        {
          "arg": "teacherSaved",
          "type": "",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/Activate",
          "verb": "patch"
        }
      ]
    }
  }
}
