{
  "name": "Student",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "fatherLastname": {
      "type": "string",
      "required": true
    },
    "motherLastname": {
      "type": "string",
      "required": true
    },
    "registerNumber": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "schoolUser": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "schoolUserId",
      "options": {
        "nestRemoting": true
      }
    },
    "parentUser": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "parentUserId",
      "options": {
        "nestRemoting": true
      }
    },
    "teacherUser": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "teacherUserId",
      "options": {
        "nestRemoting": true
      }
    },
    "studentGroup": {
      "type": "hasOne",
      "model": "StudentGroup",
      "foreignKey": "studentId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "School",
      "permission": "ALLOW",
      "property": [
        "AddStudents",
        "GetAllOfSchool"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Teacher",
      "permission": "ALLOW",
      "property": [
        "AddStudents",
        "GetAllOfTeacher"
      ]
    }
  ],
  "methods": {
    "AddStudents": {
      "accepts": [
        {
          "arg": "students",
          "type": "array",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newStudents",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/Array",
          "verb": "post"
        }
      ]
    },
    "GetAllOfSchool": {
      "accepts": [
        {
          "arg": "schoolUserId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "students",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/OfSchool/:schoolUserId",
          "verb": "get"
        }
      ]
    },
    "GetAllOfTeacher": {
      "accepts": [
        {
          "arg": "teacherUserId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "students",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/OfTeacher/:teacherUserId",
          "verb": "get"
        }
      ]
    }
  }
}
