{
  "name": "Evaluation",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "calification": {
      "type": "number",
      "required": true,
      "mysql": {
        "dataType": "DECIMAL",
        "dataPrecision": 5,
        "dataScale": 2
      }
    },
    "rubricsCalifications": {
      "type": "array",
      "required": false
    },
    "comment": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "parcialProduct": {
      "type": "belongsTo",
      "model": "ParcialProduct",
      "foreignKey": "parcialProductId",
      "options": {
        "nestRemoting": true
      }
    },
    "student": {
      "type": "belongsTo",
      "model": "Student",
      "foreignKey": "studentId",
      "options": {
        "nestRemoting": true
      }
    },
    "studentFiles": {
      "type": "hasMany",
      "model": "UploadedFiles",
      "through": "EvaluationFile",
      "foreignKey": "evaluationId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "Update",
        "UpdateGetStudentEvaluation",
        "UpdateUploadStudentFile"
      ]
    }
  ],
  "methods": {
    "GetStudentEvaluation": {
      "accepts": [
        {
          "arg": "studentId",
          "type": "number",
          "required": true,
          "description": ""
        },
        {
          "arg": "parcialProductId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "evaluation",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/OfStudent/:studentId/OfProduct/:parcialProductId",
          "verb": "get"
        }
      ]
    },
    "UploadStudentFile": {
      "accepts": [
        {
          "arg": "studentId",
          "type": "number",
          "required": true,
          "description": ""
        },
        {
          "arg": "parcialProductId",
          "type": "number",
          "required": true,
          "description": ""
        },
        {
          "arg": "file",
          "type": "object",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "evaluation",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/UploadFile/OfStudent/:studentId/OfProduct/:parcialProductId",
          "verb": "patch"
        }
      ]
    }
  }
}
