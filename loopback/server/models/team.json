{
  "name": "Team",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      {"members": ["student", "role"]}
    ]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "members": {
      "type": "hasMany",
      "model": "TeamStudent",
      "foreignKey": "teamId"
    },
    "strategy": {
      "type": "belongsTo",
      "model": "Strategy",
      "foreignKey": "strategyId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "School",
      "permission": "ALLOW",
      "property": [
        "AddTeams",
        "UpsertStrategyTeams",
        "UpdateTeamsMembersRoles"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Teacher",
      "permission": "ALLOW",
      "property": [
        "AddTeams",
        "UpsertStrategyTeams",
        "UpdateTeamsMembersRoles"
      ]
    }
  ],
  "methods": {
    "AddTeams": {
      "accepts": [
        {
          "arg": "teams",
          "type": "array",
          "required": true,
          "description": ""
        },
        {
          "arg": "strategyId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newTeams",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/Array",
          "verb": "post"
        }
      ]
    },
    "UpsertStrategyTeams": {
      "accepts": [
        {
          "arg": "teams",
          "type": "array",
          "required": true,
          "description": ""
        },
        {
          "arg": "strategyId",
          "type": "number",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newTeams",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/OfStrategy/:strategyId",
          "verb": "patch"
        }
      ]
    },
    "UpdateTeamsMembersRoles": {
      "accepts": [
        {
          "arg": "teams",
          "type": "array",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "newTeams",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/MemebersRoles",
          "verb": "patch"
        }
      ]
    }
  }
}
